@model string
@{
    ViewBag.Title = "Inventario Servidor | Locales";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section css{


    <style>


        fieldset.default {
            margin-top: 5px;
            margin-bottom: 10px;
            display: block;
            min-inline-size: min-content;
            border-width: 1px;
            border-style: solid;
            border-color: #c5c7d5;
            border-image: initial;
            padding: 20px;
            border-radius: 5px;
        }

        legend.default {
            display: block;
            padding-inline-start: 2px;
            padding-inline-end: 2px;
            border-width: initial;
            border-style: none;
            border-color: initial;
            border-image: initial;
            width: auto;
            font-size: 15px;
            font-weight: bold;
            margin-bottom: 0px;
            color: #263871;
            float: none;
        }

        .col-form-label {
            font-weight: bold;
            font-size: 0.75rem;
            padding-left: 10px;
            padding-right: 0px;
        }

        #tbodyErrores{
            line-height:1.5;
        }
    </style>

}


<!--Page header-->
<div class="page-header d-lg-flex d-block">
    <div class="page-leftheader">
        <div class="page-title">Registro de inventario</div>
    </div>
    <div class="page-rightheader ms-md-auto">
        <ol class="breadcrumb1">
            <li class="breadcrumb-item1"><a href=@Url.Action("Index", "Home", new {area=""})>Inicio</a></li>
            <li class="breadcrumb-item1 active">Locales</li>
            <li class="breadcrumb-item1 active">Inventario Servidor</li>
        </ol>
    </div>
</div>

<div class="row row-sm">
    <div class="col-xl-12">
        <div class="card overflow-hidden needs-validation" id="formInventario">
            @Html.Partial("_CardHeader", "Administracion e inventario de servidores")

            <div class="card-body pt-3 pb-0">
                <div class="row mb-4" id="btn-local">
                    <div class="col-lg-2 col-md-2 col-sm-12">
                        <button type="button" id="btnNuevo" class="btn btn-sm btn-primary btn-block">Nuevo</button>
                    </div>
                    <div class="col-lg-2 col-md-2 col-sm-12">
                        <button type="button" id="btnGuardar" class="btn btn-sm btn-primary btn-block">Guardar</button>
                    </div>
                    <div class="col-lg-2 col-md-2 col-sm-12">
                        <button type="button" id="btnBuscar" class="btn btn-sm btn-primary btn-block">Buscar</button>
                    </div>
                    <div class="col-lg-2 col-md-2 col-sm-12">
                        <button type="button" id="btnImportar" class="btn btn-sm btn-primary btn-block">Importar Excel</button>
                        <input type="file" id="excelInventario" style="display: none;">
                    </div>
                    <div class="col-md-2">
                        <a class="btn btn-link btn-sm" id="btnDescargarPlantillas">Descargar plantillas</a>
                    </div>
                    <div class="col-lg-2 col-md-6 col-sm-3 d-flex justify-content-end">
                        <button type="button" id="btnDescargarMaestro" class="btn btn-sm btn-primary ">Descargar maestro</button>
                    </div>
                </div>
            </div>

            <div class="card-body  pb-0">
                <div class="row">
                    <div class="col-xl-5">
                        <div class="form-group row mb-2 select2-sm">
                            <label class="col-form-label col-xl-2">Empresa</label>
                            <div class="col-xl-10">
                                <select class="form-control is-valid select2-show-search custom-select" id="cboEmpresa" required>
                                    <option label="Seleccione una opcion"></option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-3">
                        <div class="form-group row mb-2 select2-sm">
                            <label class="col-form-label col-xl-3">Formato</label>
                            <div class="col-xl-9">
                                <select class="form-control select2-show-search custom-select" id="cboFormato" required>
                                    <option label="Seleccione una opcion"></option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-4">
                        <div class="form-group row mb-2 select2-sm">
                            <label class="col-form-label col-xl-2">Local</label>
                            <div class="col-xl-10">
                                <select class="form-control is-valid select2-show-search custom-select" id="cboLocal" required>
                                    <option label="Seleccione una opcion"></option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card-body pt-3 pb-0">
                <div class="row">
                    <div class="col-xl-3">
                        <div class="form-group row mb-2">
                            <label class="col-form-label col-xl-4">Número</label>
                            <div class="col-xl-8">
                                <input type="text" class="form-control form-control-sm" id="txtNumero" required>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-3">
                        <div class="form-group row mb-2 select2-sm">
                            <label class="col-form-label col-xl-3">Tipo</label>
                            <div class="col-xl-9">
                                <select class="form-control select2-show-search custom-select" id="cboTipo">
                                    <option label="Seleccione una opción"></option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-3">
                        <div class="form-group row mb-2 select2-sm">
                            <label class="col-form-label col-xl-3">Marca</label>
                            <div class="col-xl-9">
                                <select class="form-control select2-show-search custom-select" id="cboMarca">
                                    <option label="Seleccione una opción"></option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-3">
                        <div class="form-group row mb-2 select2-sm">
                            <label class="col-form-label col-xl-3">Modelo</label>
                            <div class="col-xl-9">
                                <select class="form-control select2-show-search custom-select" id="cboModelo">
                                    <option label="Seleccione una opción"></option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-xl-3">
                        <div class="form-group row mb-2">
                            <label class="col-form-label col-xl-4">Hostname</label>
                            <div class="col-xl-8">
                                <input type="text" class="form-control form-control-sm" id="txtHostname">
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-3">
                        <div class="form-group row mb-2">
                            <label class="col-form-label col-xl-3">Serie</label>
                            <div class="col-xl-9">
                                <input type="text" class="form-control form-control-sm" id="txtSerie">
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-3">
                        <div class="form-group row mb-2">
                            <label class="col-form-label col-xl-3">RAM</label>
                            <div class="col-xl-9">
                                <input type="number" class="form-control form-control-sm" id="txtRam">
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-3">
                        <div class="form-group row mb-2">
                            <label class="col-form-label col-xl-3">HDD</label>
                            <div class="col-xl-9">
                                <input type="number" class="form-control form-control-sm" id="txtHdd">
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-xl-3">
                        <div class="form-group row mb-2 select2-sm">
                            <label class="col-form-label col-xl-3">SO</label>
                            <div class="col-xl-9">
                                <select class="form-control select2-show-search custom-select" id="cboSo">
                                    <option label="Seleccione una opción"></option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-3">
                        <div class="form-group row mb-2">
                            <label class="col-form-label col-xl-3">Antivirus</label>
                            <div class="col-xl-9">
                                <input type="text" class="form-control form-control-sm" id="txtAntivirus">
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-3">
                        <div class="form-group row mb-2">
                            <label class="col-form-label col-xl-3">IP</label>
                            <div class="col-xl-9">
                                <input type="text" class="form-control form-control-sm" id="txtIp">
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-3">
                        <div class="form-group row mb-2">
                            <label class="col-form-label col-xl-3">IP remota</label>
                            <div class="col-xl-9">
                                <input type="text" class="form-control form-control-sm" id="txtIpRemota">
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-xl-3">
                        <div class="form-group row mb-2 select2-sm">
                            <label class="col-form-label col-xl-4">Réplica</label>
                            <div class="col-xl-8">
                                <select class="form-control select2-show-search custom-select" id="cboReplica">
                                    <option label="Seleccione una opción"></option>
                                    <option value="S">REALIZADO</option>
                                    <option value="N">NO REALIZADO</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-3">
                        <div class="form-group row mb-2">
                            <label class="col-form-label col-xl-4">Antigüedad</label>
                            <div class="col-xl-8">
                                <input type="number" class="form-control form-control-sm" id="txtAntiguedad">
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-6">
                        <div class="form-group row mb-2">
                            <label class="col-form-label col-xl-2">Observación</label>
                            <div class="col-xl-10">
                                <textarea style="line-height:1.2;" rows="3" class="form-control form-control-sm" id="txtObservaciones"></textarea>
                            </div>
                        </div>
                    </div>

                </div>

                <div class="row">
                    <div class="col-xl-12">
                        <fieldset class="default">
                            <legend class="default">Virtual</legend>
                            <div class="row">
                                <div class="col-xl-10">
                                    <table id="tableVirtuales" class="table text-nowrap border-bottom">
                                        <thead>
                                        </thead>
                                        <tbody>
                                        </tbody>
                                    </table>
                                </div>
                                <div class="col-xl-2" id="btn-virtuales">
                                    <div class="col-md-12">
                                        <button class="btn btn-primary btn-block btn-sm mb-2" id="btnNuevaVirtual" type="button" disabled>Nuevo</button>
                                    </div>
                                    <div class="col-md-12">
                                        <button class="btn btn-primary btn-block btn-sm mb-2" id="btnActualizarVirtual" type="button" disabled>Actualizar</button>
                                    </div>
                                    <div class="col-md-12">
                                        <button class="btn btn-primary btn-block btn-sm mb-2" id="btnEliminarVirtual" type="button" disabled>Eliminar</button>
                                    </div>
                                </div>
                            </div>
                        </fieldset>
                    </div>
                </div>

                <div class="row">
                    <div class="col-xl-3">
                        <div class="form-group row mb-2">
                            <label class="col-form-label col-xl-4">U. Creacion</label>
                            <div class="col-xl-8">
                                <input type="text" class="form-control form-control-sm" id="txtUsuarioCreacion" disabled value="@SPSA.Autorizadores.Web.Utiles.WebSession.Login">
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-3">
                        <div class="form-group row mb-2">
                            <label class="col-form-label col-xl-4">F. Creacion</label>
                            <div class="col-xl-8">
                                <input type="text" class="form-control form-control-sm" id="txtFechaCreacion" disabled value="@Model">
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-3">
                        <div class="form-group row mb-2">
                            <label class="col-form-label col-xl-4">U. Modifica</label>
                            <div class="col-xl-8">
                                <input type="text" class="form-control form-control-sm" id="txtUsuarioModificacion" disabled>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-3">
                        <div class="form-group row mb-2">
                            <label class="col-form-label col-xl-4">F. Modifica</label>
                            <div class="col-xl-8">
                                <input type="text" class="form-control form-control-sm" id="txtFechaModificacion" disabled>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- MODAL VIRTUALES-->
<div class="modal fade" id="modalVirtual" data-bs-backdrop="static">
    <div class="modal-dialog modal-md modal-dialog-centered" role="document">
        <div class="modal-content modal-content-demo">
            <div class="modal-header">
                <h6 class="modal-title" id="tituloModalVirtual"></h6><button aria-label="Close" class="btn-close" data-bs-dismiss="modal"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body">
            </div>
            <div class="modal-footer">
                <button id="btnGuardarVirtual" class="btn btn-sm btn-primary">Guardar</button>
                <button class="btn btn-sm btn-light" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

<!-- MODAL SERVIDORES-->
<div class="modal fade" id="modalServidores" data-bs-backdrop="static">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content modal-content-demo">
            <div class="modal-header">
                <h6 class="modal-title">Seleccione un registro</h6><button aria-label="Close" class="btn-close" data-bs-dismiss="modal"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-12">
                        <table id="tableServidores" class="table text-nowrap border-bottom">
                            <thead>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button id="btnAceptarServidor" class="btn btn-sm btn-primary">Aceptar</button>
                <button class="btn btn-sm btn-light" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

<!-- MODAL ERRORES-->
<div class="modal fade" id="modalErroresImportacionCaja" data-bs-backdrop="static">
    <div class="modal-dialog modal-md modal-dialog-centered" role="document">
        <div class="modal-content modal-content-demo">
            <div class="modal-header">
                <h6 class="modal-title" id="tituloModalError"></h6><button aria-label="Close" class="btn-close" data-bs-dismiss="modal"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Fila</th>
                            <th>Mensaje</th>
                        </tr>
                    </thead>
                    <tbody id="tbodyErrores">
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button class="btn btn-sm btn-light" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Content/plugins/datatable/js/jquery.dataTables.min.js"></script>
    <script src="~/Content/plugins/datatable/js/dataTables.bootstrap5.js"></script>
    <script src="~/Content/plugins/datatable/js/dataTables.buttons.min.js"></script>
    <script src="~/Content/plugins/datatable/js/buttons.bootstrap5.min.js"></script>
    <script src="~/Content/plugins/datatable/js/jszip.min.js"></script>
    <script src="~/Content/plugins/datatable/js/buttons.html5.min.js"></script>
    <script src="~/Content/plugins/datatable/dataTables.responsive.min.js"></script>
    <script src="~/Content/plugins/datatable/responsive.bootstrap5.min.js"></script>
    <script src="~/Content/plugins/sweet-alert/jquery.sweet-modal.min.js"></script>
    <script src="~/Content/plugins/sweet-alert/sweetalert.min.js"></script>
    <script src="~/Content/js/sweet-alert.js"></script>
    <script src="~/Content/plugins/input-mask/jquery.mask.min.js"></script>
    <script src="~/Content/plugins/date-picker/date-picker.js"></script>
    <script src="~/Content/plugins/date-picker/jquery-ui.js"></script>
    <script src="~/Content/plugins/input-mask/jquery.maskedinput.js"></script>
    <script src="~/Content/plugins/bootstrap-datepicker/bootstrap-datepicker.js"></script>
    <script src="~/Content/ViewJs/InventarioServidor.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            InventarioServidor.init();
        });
    </script>

}

