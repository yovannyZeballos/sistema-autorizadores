
@{
    ViewBag.Title = "Eliminar Autorizador | Autorizadores";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--Page header-->
<div class="page-header d-lg-flex d-block">
    <div class="page-leftheader">
        <div class="page-title">Colaboradores cesados con autorizadores para eliminar</div>
    </div>
    <div class="page-rightheader ms-md-auto">
        <ol class="breadcrumb1">
            <li class="breadcrumb-item1"><a href=@Url.Action("Index", "Home", new {area=""})>Inicio</a></li>
            <li class="breadcrumb-item1 active">Autorizador</li>
            <li class="breadcrumb-item1 active">Eliminar Autorizador</li>
        </ol>
    </div>
</div>

<div class="row row-sm">
    <div class="col-xl-12">
        <div class="card overflow-hidden">
            <div class="card-header bg-primary ">
                <h6 class="card-title text-white">Autorizadores</h6>
                <div class="card-options ">
                    <a href="javascript:void(0);" class="card-options-collapse me-2" data-bs-toggle="card-collapse"><i class="fe fe-chevron-up text-white"></i></a>
                </div>
            </div>
            <div class="card-body">

                <div class="form-group data-table-btn">
                    <button id="btnEliminar" class="btn btn-sm btn-primary mb-4  ms-2">Ejecutar Eliminación</button>
                </div>
                <table id="tableColaboradorCesado" class="table text-nowrap border-bottom">
                    <thead>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

