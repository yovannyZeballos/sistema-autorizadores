
@{
    ViewBag.Title = "Configuración de volantes | Cajeros";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section css{
    <style>

        .table tr.selected {
            background-color: #128af9 !important;
            color: white !important;
        }

        .pointer {
            cursor: pointer;
        }

        #tableCajero thead th {
            padding: 0px 22px !important;
        }

        #tableLocal thead th {
            padding: 0px 22px !important;
        }

        #tableCajeroVolante thead th {
            padding: 0px 22px !important;
        }

        .swal-modal .swal-text {
            text-align: left;
        }
    </style>
}

<!--Page header-->
<div class="page-header d-lg-flex d-block">
    <div class="page-leftheader">
        <div class="page-title">Configuración de volantes</div>
    </div>
    <div class="page-rightheader ms-md-auto">
        <ol class="breadcrumb1">
            <li class="breadcrumb-item1"><a href=@Url.Action("Index", "Home", new {area=""})>Inicio</a></li>
            <li class="breadcrumb-item1 active">Cajero</li>
            <li class="breadcrumb-item1 active">Configuración de volantes</li>
        </ol>
    </div>
</div>

<div class="row row-sm">
    <div class="col-xl-12">
        <div class="card overflow-hidden">
            @Html.Partial("_CardHeader", "Listados")
            <div class="card-body">
                <div class="row">
                    <div class="col-6">
                        <div class="row">
                            <div class="form-group data-table-btn">
                                <button id="btnAsignar" class="btn btn-sm btn-primary mb-4 ms-1"><i class="fe fe-user-plus me-1"></i>Asignar local</button>
                            </div>
                            <div class="col-12 mb-4">
                                <table id="tableCajero" class="table table-striped table-bordered text-nowrap border-bottom">
                                    <thead>
                                    </thead>
                                    <tbody>
                                    </tbody>
                                </table>
                            </div>
                            <div class="col-12">
                                <div class="form-group data-table-btn">
                                    <label class="unselectable ms-2">
                                        <input id="chkSeleccionar" type="checkbox"> Seleccionar todos
                                    </label>
                                </div>
                                <table id="tableLocal" class="table table-striped table-bordered text-nowrap border-bottom">
                                    <thead>
                                    </thead>
                                    <tbody>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <div class="col-6">
                        <div class="form-group data-table-btn">
                            <button id="bntEliminar" class="btn btn-sm btn-primary mb-4 ms-1"><i class="fe fe-x-circle me-1"></i>Eliminar local</button>
                            <label class="unselectable ms-2">
                                <input id="chkActivos" type="checkbox"> Activos
                            </label>
                            <label class="unselectable ms-2">
                                <input id="chkInactivos" type="checkbox"> Inactivos
                            </label>
                        </div>
                        <table id="tableCajeroVolante" class="table table-striped table-bordered text-nowrap border-bottom">
                            <thead>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section scripts{
    <script src="~/Content/plugins/datatable/js/jquery.dataTables.min.js"></script>
    <script src="~/Content/plugins/datatable/js/dataTables.bootstrap5.js"></script>
    <script src="~/Content/plugins/datatable/js/dataTables.buttons.min.js"></script>
    <script src="~/Content/plugins/datatable/js/buttons.bootstrap5.min.js"></script>
    <script src="~/Content/plugins/datatable/js/jszip.min.js"></script>
    <script src="~/Content/plugins/datatable/js/buttons.html5.min.js"></script>
    <script src="~/Content/plugins/datatable/dataTables.responsive.min.js"></script>
    <script src="~/Content/plugins/datatable/responsive.bootstrap5.min.js"></script>
    <script src="~/Content/plugins/sweet-alert/jquery.sweet-modal.min.js"></script>
    <script src="~/Content/plugins/sweet-alert/sweetalert.min.js"></script>
    <script src="~/Content/js/sweet-alert.js"></script>
    <script src="~/Content/ViewJs/CajeroVolante.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            CajeroVolante.init();
        });
    </script>
}

