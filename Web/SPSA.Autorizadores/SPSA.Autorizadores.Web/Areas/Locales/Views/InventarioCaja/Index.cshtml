@model string
@{
    ViewBag.Title = "Inventario Cajas | Locales";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section css{


    <style>


        fieldset.default {
            margin-top: 5px;
            margin-bottom: 10px;
            display: block;
            min-inline-size: min-content;
            border-width: 1px;
            border-style: solid;
            border-color: #c5c7d5;
            border-image: initial;
            padding: 20px;
            border-radius: 5px;
        }

        legend.default {
            display: block;
            padding-inline-start: 2px;
            padding-inline-end: 2px;
            border-width: initial;
            border-style: none;
            border-color: initial;
            border-image: initial;
            width: auto;
            font-size: 15px;
            font-weight: bold;
            margin-bottom: 0px;
            color: #263871;
            float: none;
        }

        .col-form-label {
            font-weight: bold;
            font-size: 0.75rem;
        }
    </style>

}

<!--Page header-->
<div class="page-header d-lg-flex d-block">
    <div class="page-leftheader">
        <div class="page-title">Registro de inventario</div>
    </div>
    <div class="page-rightheader ms-md-auto">
        <ol class="breadcrumb1">
            <li class="breadcrumb-item1"><a href=@Url.Action("Index", "Home", new {area=""})>Inicio</a></li>
            <li class="breadcrumb-item1 active">Locales</li>
            <li class="breadcrumb-item1 active">Inventario Cajas</li>
        </ol>
    </div>
</div>


<div class="row row-sm">
    <div class="col-xl-12">
        <div class="card overflow-hidden needs-validation" id="formInventario">
            @Html.Partial("_CardHeader", "Administracion e inventario de cajas")

            <div class="card-body pt-3 pb-0">
                <div class="row mb-4" id="btn-local">
                    <div class="col-lg-2 col-md-2 col-sm-12">
                        <button type="button" id="btnNuevo" class="btn btn-sm btn-primary btn-block">Nuevo</button>
                    </div>
                    <div class="col-lg-2 col-md-2 col-sm-12">
                        <button type="button" id="btnGuardar" class="btn btn-sm btn-primary btn-block">Guardar</button>
                    </div>
                    <div class="col-lg-2 col-md-2 col-sm-12" style="display:none;">
                        <button type="button" id="btnBuscar" class="btn btn-sm btn-primary btn-block">Buscar</button>
                    </div>
                    <div class="col-lg-2 col-md-2 col-sm-12">
                        <button type="button" id="btnImportar" class="btn btn-sm btn-primary btn-block">Importar Excel</button>
                        <input type="file" id="excelInventario" style="display: none;">
                    </div>
                    <div class="col-md-2">
