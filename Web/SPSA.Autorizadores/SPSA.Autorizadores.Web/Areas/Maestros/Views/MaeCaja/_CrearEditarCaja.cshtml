
@model SPSA.Autorizadores.Aplicacion.Features.Cajas.DTOs.MaeCajaDTO

<div class="row needs-validation" id="formCaja">
    <div class="col-xl-6 col-md-6 col-sm-12">
        <div class="form-group">
            <label for="txtCodigo" class="form-label">Nro. Caja</label>
            <input type="number" class="form-control form-control-sm" id="txtNumCaja" value="@Model.NumCaja" required>
        </div>
    </div>
    <div class="col-xl-6 col-md-6 col-sm-12">
        <div class="form-group">
            <label for="txtCodigo" class="form-label">IP Caja</label>
            <input type="text" class="form-control form-control-sm" id="txtIpAddress" value="@Model.IpAddress" required>
        </div>
    </div>
    <div class="col-xl-6 col-md-6 col-sm-12">
        <div class="form-group select2-sm">
            <label class="form-label">Sist. Op.</label>
            <select class="form-control select2-show-modal custom-select" id="cboTipOs" required>
                <option label="Seleccionar"></option>
                <option @(Model.TipOs == "L" ? "selected" : "") value="L">LINUX</option>
                <option @(Model.TipOs == "W" ? "selected" : "") value="W">WINDOWS</option>
            </select>
        </div>
    </div>
    <div class="col-xl-6 col-md-6 col-sm-12">
        <div class="form-group select2-sm">
            <label class="form-label">Estado</label>
            <select class="form-control select2-show-modal custom-select" id="cboTipEstadoCaja" required>
                <option @(Model.TipEstado == "A" ? "selected" : "") value="A" selected>ACTIVO</option>
                <option @(Model.TipEstado == "E" ? "selected" : "") value="E">ELIMINADO</option>
            </select>
        </div>
    </div>
    <div class="col-xl-6 col-md-6 col-sm-12">
        <div class="form-group select2-sm">
            <label class="form-label">Tipo</label>
            <select class="form-control select2-show-modal custom-select" id="cboTipCaja" required>
                <option label="Seleccionar"></option>
                <option @(Model.TipCaja == "ASISTIDA" ? "selected" : "") value="ASISTIDA">ASISTIDA</option>
                <option @(Model.TipCaja == "SELF" ? "selected" : "") value="SELF">SELF</option>
            </select>
        </div>
    </div>
    <div class="col-xl-6 col-md-6 col-sm-12">
        <div class="form-group select2-sm">
            <label class="form-label">Ubicacion</label>
            <select class="form-control select2-show-modal custom-select" id="cboTipUbicacion" required>
                <option label="Seleccionar"></option>
                <option @(Model.TipUbicacion == "CAFETIN" ? "selected" : "") value="CAFETIN">CAFETIN</option>
                <option @(Model.TipUbicacion == "CAMPAÑA" ? "selected" : "") value="CAMPAÑA">CAMPAÑA</option>
                <option @(Model.TipUbicacion == "CHORIPAN" ? "selected" : "") value="CHORIPAN">CHORIPAN</option>
                <option @(Model.TipUbicacion == "COLCHONES" ? "selected" : "") value="COLCHONES">COLCHONES</option>
                <option @(Model.TipUbicacion == "DELY" ? "selected" : "") value="DELY">DELY</option>
                <option @(Model.TipUbicacion == "DEVOLUCION" ? "selected" : "") value="DEVOLUCION">DEVOLUCION</option>
                <option @(Model.TipUbicacion == "ELECTRO" ? "selected" : "") value="ELECTRO">ELECTRO</option>
                <option @(Model.TipUbicacion == "HABANA" ? "selected" : "") value="HABANA">HABANA</option>
                <option @(Model.TipUbicacion == "LINEAL" ? "selected" : "") value="LINEAL">LINEAL</option>
                <option @(Model.TipUbicacion == "PANADERIA" ? "selected" : "") value="PANADERIA">PANADERIA</option>
                <option @(Model.TipUbicacion == "RAPIDA" ? "selected" : "") value="RAPIDA">RAPIDA</option>
                <option @(Model.TipUbicacion == "SELF" ? "selected" : "") value="SELF">SELF</option>
            </select>
        </div>
    </div>

</div>
