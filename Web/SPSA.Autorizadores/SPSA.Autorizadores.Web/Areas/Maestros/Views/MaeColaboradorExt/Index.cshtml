@model string
@{
    ViewBag.Title = "Mantenimiento de Colaboradores Externos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section css{
    <style>
        /* Fix de inputs date con .form-control-sm */
        .form-control-sm.date-sm-fix {
            height: auto;
            min-height: calc(1.5em + .5rem + 2px);
            padding-top: .25rem;
            padding-bottom: .25rem;
            line-height: 1.5;
        }

            .form-control-sm.date-sm-fix::-webkit-datetime-edit {
                line-height: 1.5;
                color: inherit;
                opacity: 1;
            }

            .form-control-sm.date-sm-fix::-webkit-calendar-picker-indicator {
                opacity: 1;
            }

        /* Fila inactiva: texto rojo y algo de énfasis */
        #tableColaboradoresExt tbody tr.row-inactivo td {
            color: #dc3545 !important; /* rojo */
            font-weight: 600;
        }

        /* Mantener rojo incluso si marcas la fila como 'selected' */
        #tableColaboradoresExt tbody tr.row-inactivo.selected td {
            color: #dc3545 !important;
        }
    </style>
}

<!--Page header-->
<div class="page-header d-lg-flex d-block">
    <div class="page-leftheader">
        <div class="page-title">Mantenimiento de Colaboradores Externos</div>
    </div>
    <div class="page-rightheader ms-md-auto">
        <ol class="breadcrumb1">
            <li class="breadcrumb-item1"><a href=@Url.Action("Index", "Home", new {area=""})>Inicio</a></li>
            <li class="breadcrumb-item1 active">Colaboradores Externos</li>
            <li class="breadcrumb-item1 active">Administrar</li>
        </ol>
    </div>
</div>

<div class="card overflow-hidden">
    @Html.Partial("_CardHeader", "Filtros")
    <div class="card-body">
        <div class="row g-2">
            <div class="col-md-3 d-none">
                <div class="form-group">
                    <label class="form-label">Usuario</label>
                    <input type="text" class="form-control form-control-sm" id="txtUsuario" value="@SPSA.Autorizadores.Web.Utiles.WebSession.Login" disabled>
                </div>
            </div>
            <div class="col-md-2">
                <div class="form-group select2-sm">
                    <label class="form-label">Tipo</label>
                    <select class="form-control select2-show-search" id="cboTipoUsuarioBuscar">
                        <option value="">Todos</option>
                        <option value="A">AUTORIZADOR</option>
                        <option value="C">CAJERO</option>
                    </select>
                </div>
            </div>
            <div class="col-md-2">
                <div class="form-group select2-sm">
                    <label class="form-label">Estado</label>
                    <select class="form-control select2-show-search" id="cboIndActivoBuscar">
                        <option value="">Todos</option>
                        <option value="S">ACTIVO</option>
                        <option value="N">INACTIVO</option>
                    </select>
                </div>
            </div>
            <div class="col-md-2">
                <div class="form-group">
                    <label class="form-label"> Texto:</label>
                    <input type="text" class="form-control form-control-sm" id="txtFiltroBuscar" placeholder="Ingrese texto a filtrar" oninput="this.value=this.value.toUpperCase();"  />
                </div>
            </div>
            <div class="col-md-2 d-flex align-items-end">
                <div class="form-group">
                    <button id="btnBuscarColabExt" class="btn btn-sm btn-primary w-100">
                        <i class="fe fe-search me-1"></i>Buscar
                    </button>
                </div>
            </div>
        </div>

        <div class="my-3">
            <button id="btnModalNuevoColabExt" class="btn btn-sm btn-primary me-2">
                <i class="fe fe-plus me-1"></i>Nuevo
            </button>

            <button id="btnModalEditar" class="btn btn-sm btn-primary me-2">
                <i class="fe fe-edit me-1"></i>Modificar
            </button>
            @*<button id="btnDescargarPlantilla" class="btn btn-sm btn-primary me-2">
                <i class="fe fe-download me-1"></i>Descargar Plantilla
            </button>
            <button id="btnImportarColabExt" class="btn btn-sm btn-primary me-2">
                <i class="fe fe-upload me-1"></i>Importar Colaboradores
            </button>
            <input type="file" id="excelImportar" style="display: none;">*@

            @*<button id="btnExportar" class="btn btn-sm btn-outline-primary">
                <i class="fe fe-file me-1"></i>Exportar Excel
            </button>*@
        </div>

        <table id="tableColaboradoresExt" class="table table-bordered text-nowrap border-bottom w-100">
            <thead class="thead-light">
                <tr>
                    <th style="font-size: 11px;">LOCAL</th>
                    <th style="font-size: 11px;">CODIGO</th>
                    <th style="font-size: 11px;">A. PATERNO</th>
                    <th style="font-size: 11px;">A. MATERNO</th>
                    <th style="font-size: 11px;">NOMBRE</th>
                    <th style="font-size: 11px;">TIPO DOC</th>
                    <th style="font-size: 11px;">NUM. DOC</th>
                    <th style="font-size: 11px;">PUESTO</th>
                    <th style="font-size: 11px;">F. INGRESO</th>
                    <th style="font-size: 11px;">F. CESE</th>
                    <th style="font-size: 11px;">ESTADO</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>

<!-- MODAL COLABORADOR EXTERNO -->
<div class="modal fade" id="modalColabExt" data-bs-backdrop="static">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content modal-content-demo">
            <div class="modal-header">
                <h6 class="modal-title" id="tituloModalColabExt">Colaborador Externo</h6>
                <button class="btn-close" data-bs-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>

            <div class="modal-body">
                <form id="formColabExt" class="row needs-validation" novalidate>
                    <div class="row g-2">
                        <div class="row mb-2">
                            <div class="col-md-3">
                                <label class="form-label mb-4">Indicador</label>
                                <div class="d-flex align-items-center">
                                    <div class="form-check form-check-inline me-3">
                                        <input class="form-check-input" type="radio" name="IndicadorPersonal" id="Personal" value="S" checked>
                                        <label class="form-check-label" for="Personal">Personal</label>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="IndicadorPersonal" id="Generico" value="N">
                                        <label class="form-check-label" for="Generico">Genérico</label>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-3">
                                <label class="form-label mb-4">Tipo Colaborador</label>
                                <div class="d-flex align-items-center">
                                    <div class="form-check form-check-inline me-3">
                                        <input class="form-check-input" type="radio" name="TipoColaborador" id="Cajero" value="C" checked>
                                        <label class="form-check-label" for="Cajero">Cajero</label>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="TipoColaborador" id="Autorizador" value="A">
                                        <label class="form-check-label" for="Autorizador">Autorizador</label>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="form-label">U. Creación</label>
                                    <input type="text" class="form-control form-control-sm" id="txtUsuCreacion" disabled>
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="form-label">F. Creación</label>
                                    <input type="date" class="form-control form-control-sm date-sm-fix" id="txtFecCreacion" disabled>
                                </div>
                            </div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="txtCodOfisis" class="form-label">Código</label>
                                    <input type="text" class="form-control form-control-sm" id="txtCodOfisis" disabled>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="txtApPaterno" class="form-label">Ap. Paterno</label>
                                    <input type="text" class="form-control form-control-sm uppercase" id="txtApPaterno" oninput="this.value=this.value.toUpperCase();" required>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="txtApMaterno" class="form-label">Ap. Materno</label>
                                    <input type="text" class="form-control form-control-sm uppercase" id="txtApMaterno" oninput="this.value=this.value.toUpperCase();" required>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="txtNomTrabajador" class="form-label">Nombre</label>
                                    <input type="text" class="form-control form-control-sm uppercase" id="txtNomTrabajador" oninput="this.value=this.value.toUpperCase();" required>
                                </div>
                            </div>
                        </div>


                        <div class="row mb-2">
                            <div class="col-md-3">
                                <div class="form-group select2-sm">
                                    <label class="form-label">Tipo Doc</label>
                                    <select class="form-control select2-show-search" id="cboTipoDoc" required>
                                        <option value="DNI">DNI</option>
                                        <option value="CEX">CEX</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="txtNroDoc" class="form-label">Nro. Doc</label>
                                    <input type="text" class="form-control form-control-sm uppercase" id="txtNroDoc" oninput="this.value=this.value.toUpperCase();" maxlength="15" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="txtPuesto" class="form-label">Puesto</label>
                                    <input type="text" class="form-control form-control-sm uppercase" id="txtPuesto" oninput="this.value=this.value.toUpperCase();" required>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-2">
                            <div class="col-md-3">
                                <label for="txtFecIngreso" class="form-label">F. Ingreso</label>
                                <input type="date" class="form-control form-control-sm date-sm-fix" id="txtFecIngreso" required />
                            </div>
                            <div class="col-md-3">
                                <label for="txtFecCese" class="form-label">F. Cese</label>
                                <input type="date" class="form-control form-control-sm date-sm-fix" id="txtFecCese" />
                            </div>
                        </div>

                    </div>
                </form>
            </div>

            <div class="modal-footer">
                <button id="btnGuardarColabExt" class="btn btn-primary">Guardar</button>
                <button class="btn btn-light" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>
<!-- MODAL ERRORES IMPORTAR EXCEL-->
<div class="modal fade" id="modalErroresImportacionExcel" data-bs-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="tituloModalImportarEmpresa">Errores encontrados</h5>
                <button aria-label="Close" class="btn-close text-end" data-bs-dismiss="modal"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Fila</th>
                            <th>Mensaje</th>
                        </tr>
                    </thead>
                    <tbody id="tbodyErrores">
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button class="btn btn-sm btn-light" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

