@model string
@{
    ViewBag.Title = "Mantenimiento de locales | Locales";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--Page header-->
<div class="page-header d-lg-flex d-block">
    <div class="page-leftheader">
        <div class="page-title">Mantenimiento de locales</div>
    </div>
    <div class="page-rightheader ms-md-auto">
        <ol class="breadcrumb1">
            <li class="breadcrumb-item1"><a href=@Url.Action("Index", "Home", new {area=""})>Inicio</a></li>
            <li class="breadcrumb-item1 active">Locales</li>
            <li class="breadcrumb-item1 active">Administrar</li>
        </ol>
    </div>
</div>
<!-- MANTENIMIENTO LOCAL-->
<div class="row row-sm">
    <div class="col-xl-12">
        <div class="card overflow-hidden needs-validation" id="formLocal">
            @Html.Partial("_CardHeader", "Local")
            <div class="card-body pt-1 pb-0">
                <div class="row mb-4" id="btn-local">
                    <div class="col-lg-2 col-md-2 col-sm-6">
                        <button type="button" id="btnNuevoLocal" class="btn btn-sm btn-primary btn-block"><i class="fa fa-plus"></i> Nuevo</button>
                    </div>
                    <div class="col-lg-2 col-md-2 col-sm-6">
                        <button type="button" id="btnGuardarLocal" class="btn btn-sm btn-primary btn-block"><i class="fa fa-save"></i> Guardar</button>
                    </div>
                    <div class="col-lg-2 col-md-2 col-sm-6">
                        <button type="button" id="btnBuscarLocal" class="btn btn-sm btn-primary btn-block"><i class="fa fa-search"></i> Buscar</button>
                    </div>
                    <div class="col-lg-3 col-md-3 col-sm-6">
                        <button type="button" id="btnDescargarMaestroLocal" class="btn btn-block btn-primary btn-sm "><i class="fa fa-download"></i> Descargar Maestro</button>
                    </div>
                    <div class="col-lg-3 col-md-3 col-sm-6">
                        <button type="button" id="btnAbrirModalExcelLocal" class="btn btn-block btn-outline-success btn-sm"><i class="fa fa-upload"></i> Importar Maestro</button>
                    </div>
                    @*<div class="col-lg-4 col-md-4 col-sm-12 d-flex justify-content-end">
            <div class="col-lg-6 col-md-6 col-sm-6">
                <button type="button" id="btnAbrirModalExcelLocal" class="btn btn-outline-success btn-sm"><i class="fa fa-upload"></i> Importar Maestro</button>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6">
                <button type="button" id="btnDescargarMaestroLocal" class="btn btn-primary btn-sm "><i class="fa fa-download"></i> Descargar maestro</button>
            </div>
        </div>*@
                </div>
            </div>
            <div class="card-body pt-2 pb-0">
                <div class="row">
                    <div class="col-xl-3 col-md-6">
                        <div class="form-group select2-sm">
                            <label class="form-label">Empresa</label>
                            <select class="form-control is-valid select2-show-search custom-select" id="cboEmpresa" required>
                                <option label="Seleccione una empresa"></option>
                            </select>
                        </div>
                    </div>
                    <div class="col-xl-3 col-md-6">
                        <div class="form-group select2-sm">
                            <label class="form-label">Cadena</label>
                            <select class="form-control select2-show-search custom-select" id="cboCadena" required>
                                <option label="Seleccione una cadena"></option>
                            </select>
                        </div>
                    </div>
                    <div class="col-xl-3 col-md-6">
                        <div class="form-group select2-sm">
                            <label class="form-label">Region</label>
                            <select class="form-control select2-show-search custom-select" id="cboRegion" required>
                                <option label="Seleccione una region"></option>
                            </select>
                        </div>
                    </div>
                    <div class="col-xl-3 col-md-6">
                        <div class="form-group select2-sm">
                            <label class="form-label">Zona</label>
                            <select class="form-control select2-show-search custom-select" id="cboZona" required>
                                <option label="Seleccione una zona"></option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body pt-2 pb-0">
                <div class="card-title text-center"><b>Información de local</b></div>
                <div class="row">
                    <div class="col-xl-2 col-md-4">
                        <div class="form-group">
                            <label for="txtCodLocal" class="form-label">Código Local</label>
                            <input type="text" class="form-control form-control-sm" maxlength="4" id="txtCodLocal" required>
                        </div>
                    </div>
                    <div class="col-xl-4 col-md-4">
                        <div class="form-group">
                            <label for="txtNomLocal" class="form-label">Nombre Local</label>
                            <input type="text" class="form-control form-control-sm" maxlength="100" id="txtNomLocal" required oninput="this.value = this.value.toUpperCase()">
                        </div>
                    </div>
                    <div class="col-xl-2 col-md-4">
                        <div class="form-group select2-sm">
                            <label class="form-label">Estado</label>
                            <select class="form-control select2-show-search custom-select" id="cboTipEstado" required>
                                <option value="A" selected>ACTIVO</option>
                                <option value="E">ELIMINADO</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-xl-4 col-md-4">
                        <div class="form-group">
                            <label for="txtCodLocalPMM" class="form-label">Cod Local PMM</label>
                            <input type="number" class="form-control form-control-sm" value="0" id="txtCodLocalPMM" required>
                        </div>
                    </div>
                    <div class="col-xl-2 col-md-4">
                        <div class="form-group">
                            <label for="txtCodLocalOfiplan" class="form-label">Cod Local Ofiplan</label>
                            <input type="number" class="form-control form-control-sm" value="0" maxlength="5" id="txtCodLocalOfiplan" required>
                        </div>
                    </div>
                    <div class="col-xl-4 col-md-4">
                        <div class="form-group">
                            <label for="txtNomLocalOfiplan" class="form-label">Nombre Local Ofiplan</label>
                            <input type="text" class="form-control form-control-sm" maxlength="50" id="txtNomLocalOfiplan" required oninput="this.value = this.value.toUpperCase()">
                        </div>
                    </div>
                    <div class="col-xl-2 col-md-4">
                        <div class="form-group">
                            <label for="txtCodLocalSunat" class="form-label">Cod. Sunat</label>
                            <input type="number" class="form-control form-control-sm" maxlength="10" id="txtCodLocalSunat" value="0" required>
                        </div>
                    </div>
                    <div class="col-xl-2 col-md-4 col-sm-12">
                        <button type="button" id="btnActualizarLocal" class="btn btn-primary btn-block btn-sm" disabled><i class="fa fa-save"></i> Guardar Cambios</button>
                    </div>
                    <div class="col-xl-2 col-md-4 col-sm-12">
                        <button type="button" id="btnHabilitarlCambioRegionZona" class="btn btn-default btn-block btn-sm" disabled><i class="fa fa-pencil"></i> Habilitar Región/Zona</button>
                    </div>
                    @*<div class="col-xl-2">
            <div class="form-group">
                <label for="txtEl" class="form-label">El</label>
                <input type="text" class="form-control form-control-sm" id="txtEl" value="@Model" disabled required>
            </div>
        </div>*@
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-12">
        <div class="card overflow-hidden">
            @Html.Partial("_CardHeader", "Cajas")
            <div class="card-body">
                <div class="row">
                    <div class="col-10">
                        <table id="tableCajas" class="table text-nowrap border-bottom">
                            <thead>
                                <tr>
                                    @*<th class="border-bottom-0" style="font-size: 11px;">LOCAL</th>*@
                                    <th class="border-bottom-0" style="font-size: 11px;">NUM CAJA</th>
                                    <th class="border-bottom-0" style="font-size: 11px;">IP</th>
                                    <th class="border-bottom-0" style="font-size: 11px;">OS</th>
                                    <th class="border-bottom-0" style="font-size: 11px;">ESTADO</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                    <div class="col-2" id="btn-cajas">
                        <div class="col-md-12">
                            <button class="btn btn-primary btn-block btn-outline-success btn-sm mb-2" id="btnAbrirModalExcelCaja" type="button"><span><i class="fa fa-upload"></i> Importar</span></button>
                        </div>
                        <div class="col-md-12">
                            <button class="btn btn-primary btn-block btn-sm mb-2" id="btnNuevaCaja" type="button" disabled><i class="fa fa-plus"></i> Nuevo</button>
                        </div>
                        <div class="col-md-12">
                            <button class="btn btn-primary btn-block btn-sm mb-2" id="btnEditarCaja" type="button" disabled><i class="fa fa-pencil"></i> Actualizar</button>
                        </div>
                        <div class="col-md-12">
                            <button class="btn btn-primary btn-block btn-sm mb-2" id="btnEliminarCaja" type="button" disabled><i class="fa fa-ban"></i> Eliminar</button>
                        </div>
                        <div class="col-md-12">
                            <button class="btn btn-primary btn-block btn-sm mb-2" id="btnDescargarExcelCaja" type="button" disabled><i class="fa fa-download"></i> Descargar</button>
                        </div>
                        <div class="col-md-12 text-blue">
                            <a class="btn btn-link btn-block btn-sm mb-2" id="btnDescargarPlantillas">Plantilla Caja</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- MODAL LOCAL-->
<div class="modal fade" id="modalLocales" data-bs-backdrop="static">
    <div class="modal-dialog modal-md modal-dialog-centered" role="document">
        <div class="modal-content modal-content-demo">
            <div class="modal-header">
                <h6 class="modal-title">Seleccione un local</h6><button aria-label="Close" class="btn-close" data-bs-dismiss="modal"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-12">
                        <div class="row">
                            <div class="col-6">
                                <div class="form-group">
                                    <label for="txtEmpresaLocal" class="form-label">Empresa</label>
                                    <input type="text" class="form-control form-control-sm" id="txtEmpresaLocal" disabled>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-group">
                                    <label for="txtCadenaLocal" class="form-label">Cadena</label>
                                    <input type="text" class="form-control form-control-sm" id="txtCadenaLocal" disabled>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-group">
                                    <label for="txtRegionLocal" class="form-label">Region</label>
                                    <input type="text" class="form-control form-control-sm" id="txtRegionLocal" disabled>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-group">
                                    <label for="txtZonaLocal" class="form-label">Zona</label>
                                    <input type="text" class="form-control form-control-sm" id="txtZonaLocal" disabled>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12">
                        <table id="tableLocales" class="table text-nowrap border-bottom">
                            <thead>
                                <tr>
                                    <th class="border-bottom-0" style="font-size: 11px;">LOCAL</th>
                                    <th class="border-bottom-0" style="font-size: 11px;">NOMBRE</th>
                                    <th class="border-bottom-0" style="font-size: 11px;">PMM</th>
                                    <th class="border-bottom-0" style="font-size: 11px;">OFIPLAN</th>
                                    <th class="border-bottom-0" style="font-size: 11px;">CODIGO SUNAT</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button id="btnAceptarLocal" class="btn btn-sm btn-primary">Aceptar</button>
                <button class="btn btn-sm btn-light" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

<!-- MODAL IMPORTAR LOCAL -->
<div class="modal fade" id="modalImportarLocal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="tituloModalImportarEmpresa">Importar Locales desde Excel </h5>
                <button aria-label="Close" class="btn-close text-end" data-bs-dismiss="modal"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body">
                <div class="col-sm-12">
                    <input class="form-control" type="file" id="archivoExcelLocal" />
                    <br />
                    <div class="text-center">
                        <button class="btn btn-success" type="button" id="btnCargarExcelLocal">Cargar Excel</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- MODAL IMPORTAR CAJA -->
<div class="modal fade" id="modalImportarCaja" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="tituloModalImportarEmpresa">Importar Cajas desde Excel </h5>
                <button aria-label="Close" class="btn-close text-end" data-bs-dismiss="modal"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body">
                <div class="col-sm-12">
                    <input class="form-control" type="file" id="archivoExcelCaja" />
                    <br />
                    <div class="text-center">
                        <button class="btn btn-success" type="button" id="btnCargarExcelCaja">Cargar Excel</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<!-- MODAL CAJA-->
<div class="modal fade" id="modalCaja" data-bs-backdrop="static">
    <div class="modal-dialog modal-md modal-dialog-centered" role="document">
        <div class="modal-content modal-content-demo">
            <div class="modal-header">
                <h6 class="modal-title" id="tituloModalCaja"></h6><button aria-label="Close" class="btn-close" data-bs-dismiss="modal"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body">
            </div>
            <div class="modal-footer">
                <button id="btnActualizarCaja" class="btn btn-sm btn-primary">Actualizar</button>
                <button id="btnGuardarCaja" class="btn btn-sm btn-primary">Guardar</button>
                <button class="btn btn-sm btn-light" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>



<!-- MODAL ERRORES CAJA-->
<div class="modal fade" id="modalErroresImportacion" data-bs-backdrop="static">
    <div class="modal-dialog modal-md modal-dialog-centered" role="document">
        <div class="modal-content modal-content-demo">
            <div class="modal-header">
                <h6 class="modal-title" id="tituloModalCaja"></h6><button aria-label="Close" class="btn-close" data-bs-dismiss="modal"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Fila</th>
                            <th>Mensaje</th>
                        </tr>
                    </thead>
                    <tbody id="tbodyErroresCaja">
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button class="btn btn-sm btn-light" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

