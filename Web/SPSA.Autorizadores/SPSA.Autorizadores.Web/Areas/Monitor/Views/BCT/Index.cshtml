
@{
    ViewBag.Title = "BCT | Monitor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section css{
    <style>

        div.dt-buttons {
            display: block !important;
            width: 100% !important;
        }


        #tableListado thead th {
            padding: 0px 22px !important;
        }

        #tableCantidad thead th {
            padding: 0px 22px !important;
        }

        .form-control[readonly] {
            background-color: #fff;
            opacity: 1;
        }
    </style>
}

<div class="page-header d-lg-flex d-block">
    <div class="page-leftheader">
        <div class="page-title">Monitoreo - BCT</div>
    </div>
    <div class="page-rightheader ms-md-auto">
        <ol class="breadcrumb1">
            <li class="breadcrumb-item1"><a href=@Url.Action("Index", "Home", new {area=""})>Inicio</a></li>
            <li class="breadcrumb-item1 active">Monitoreo</li>
            <li class="breadcrumb-item1 active">BCT</li>
        </ol>
    </div>
</div>

<div class="row row-sm">
    <div class="col-xl-12">
        <div class="card overflow-hidden">
            @Html.Partial("_CardHeader", "Monitor BCT")
            <div class="card-body">

                <div class="row">
                    <div class="form-group data-table-btn">
                        <button id="btnRefrescar" class="btn btn-sm btn-primary mb-4 ms-1"><i class="fe fe-refresh-ccw me-1"></i>Refrescar</button>
                    </div>

                    <div class="col-md-6">

                        <div class="form-group row mb-2">
                            <label class="col-form-label col-md-7 text-end">Tolerancia en segundos</label>
                            <div class="col-md-5">
                                <input type="text" class="form-control form-control-sm" id="txtToleranciaSegundos" disabled>
                            </div>
                        </div>

                        <div class="form-group row mb-2">
                            <label class="col-form-label col-md-7 text-end">Diferencia en segundos</label>
                            <div class="col-md-5">
                                <input type="text" class="form-control form-control-sm" id="txtDiferenciaSegundos" disabled>
                            </div>
                        </div>

                        <div class="form-group row mb-2">
                            <label class="col-form-label col-md-7 text-end">Resultado</label>
                            <div class="col-md-5">
                                <button class="btn btn-sm rounded-circle" id="btnResultadoSegundos">&nbsp;</button>
                            </div>
                        </div>

                        <table id="tableListado" class="table table-striped table-bordered text-nowrap border-bottom">
                            <thead>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>

                    <div class="col-md-6">

                        <div class="form-group row mb-2">
                            <label class="col-form-label col-md-7 text-end">Tolerancia</label>
                            <div class="col-md-5">
                                <input type="text" class="form-control form-control-sm" id="txtTolerancia" disabled>
                            </div>
                        </div>


                        <div class="form-group row mb-8">
                            <label class="col-form-label col-md-7 text-end">Resultado</label>
                            <div class="col-md-5">
                                <button class="btn btn-sm rounded-circle" id="btnResultadoCantidad">&nbsp;</button>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <input type="text" class="form-control form-control-lg text-center" id="txtFechaRegistro" style="font-weight:bold" readonly>
                            </div>
                            <div class="col-md-6">
                                <input type="text" class="form-control form-control-lg text-center" id="txtCantidad" style="font-weight:bold" readonly>
                            </div>
                        </div>


                    </div>

                </div>
            </div>
        </div>
    </div>
</div>


@section scripts{
    <script src="~/Content/plugins/datatable/js/jquery.dataTables.min.js"></script>
    <script src="~/Content/plugins/datatable/js/dataTables.bootstrap5.js"></script>
    <script src="~/Content/plugins/datatable/js/dataTables.buttons.min.js"></script>
    <script src="~/Content/plugins/datatable/js/buttons.bootstrap5.min.js"></script>
    <script src="~/Content/plugins/datatable/js/jszip.min.js"></script>
    <script src="~/Content/plugins/datatable/js/buttons.html5.min.js"></script>
    <script src="~/Content/plugins/datatable/dataTables.responsive.min.js"></script>
    <script src="~/Content/plugins/datatable/responsive.bootstrap5.min.js"></script>
    <script src="~/Content/plugins/sweet-alert/jquery.sweet-modal.min.js"></script>
    <script src="~/Content/plugins/sweet-alert/sweetalert.min.js"></script>
    <script src="~/Content/js/sweet-alert.js"></script>
    <script src="~/Content/plugins/date-picker/date-picker.js"></script>
    <script src="~/Content/plugins/date-picker/jquery-ui.js"></script>
    <script src="~/Content/plugins/input-mask/jquery.maskedinput.js"></script>
    <script src="~/Content/plugins/bootstrap-datepicker/bootstrap-datepicker.js"></script>
    <script src="~/Content/ViewJs/BCT.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            BCT.init();
        });
    </script>
}

