                            <label class="form-check-label radio-label-lg" for="radioCajeroInt">Cajero</label>
                        </div>
                    </div>
                    <div class="d-flex align-items-center">
                        <input type="text" class="form-control" id="txtFiltroVariosInt" placeholder="Buscar..." />
                    </div>
                </div>
                <div class="col-xl-12">
                    <div class="row">
                        <table id="tableColaboradoresInt" class="table text-nowrap border-bottom">
                            <thead>
                                <tr>
                                    <th class="border-bottom-0" style="font-size: 11px;"></th>
