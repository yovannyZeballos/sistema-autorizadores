@model string
@{
    ViewBag.Title = "Solicitud Usuarios ASR";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .radio-lg {
        transform: scale(2.0); /* Agranda el radio button */
        margin-right: 0.5rem; /* Espaciado a la derecha si lo necesitas */
    }

    .radio-label-lg {
        font-size: 0.8rem;
        margin-left: 0.2rem;
    }
</style>

<!--Page header-->
<div class="page-header d-lg-flex d-block">
    <div class="page-leftheader">
        <div class="page-title">Solicitud Usuarios ASR</div>
    </div>
    <div class="page-rightheader ms-md-auto">
        <ol class="breadcrumb1">
            <li class="breadcrumb-item1"><a href=@Url.Action("Index", "Home", new {area=""})>Inicio</a></li>
            <li class="breadcrumb-item1 active">Solicitud usuario</li>
            <li class="breadcrumb-item1 active">Administrar</li>
        </ol>
    </div>
</div>

<div class="card overflow-hidden">
    @Html.Partial("_CardHeader", "Filtros")
    <div class="card-body">
        <div class="row g-2">
            <div class="col-md-3 d-none">
                <div class="form-group">
                    <label class="form-label">Usuario</label>
                    <input type="text" class="form-control form-control-sm" id="txtUsuario" value="@SPSA.Autorizadores.Web.Utiles.WebSession.Login" disabled>
                </div>
            </div>
            <div class="col-md-3 d-none">
                <div class="form-group">
                    <label for="txtCodEmpresaxx" class="form-label">CodigoEmpresa</label>
                    <input type="text" class="form-control form-control-sm" id="txtCodEmpresaxx" value="@SPSA.Autorizadores.Web.Utiles.WebSession.JerarquiaOrganizacional.CodEmpresa" disabled>
                </div>
            </div>
            <div class="col-md-3 d-none">
                <div class="form-group">
                    <label for="txtCodLocalxx" class="form-label">Local</label>
                    <input type="text" class="form-control form-control-sm" id="txtCodLocalxx" value="@SPSA.Autorizadores.Web.Utiles.WebSession.JerarquiaOrganizacional.CodLocal" disabled>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group select2-sm">
                    <label for="cboEstadoBuscar" class="form-label">Estado</label>
                    <select class="form-control form-control-sm form-select" id="cboEstadoBuscar">
                        <option value="">Todos</option>
                        <option value="S">Solicitado</option>
                        <option value="A">Aprobado</option>
                        <option value="R">Rechazado</option>
                        <option value="N">Anulado</option>
                    </select>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label for="cboTipUsuarioBuscar" class="form-label">Tipo Usuario</label>
                    <select class="form-control form-control-sm form-select" id="cboTipUsuarioBuscar">
                        <option value="">Todos</option>
                        <option value="A">Autorizador</option>
                        <option value="C">Cajero</option>
                    </select>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label for="cboTipColaboradorBuscar" class="form-label">Tipo Colaborador</label>
                    <select class="form-control form-control-sm form-select" id="cboTipColaboradorBuscar">
                        <option value="">Todos</option>
                        <option value="I">Interno</option>
                        <option value="E">Externo</option>
                    </select>
                </div>
            </div>

            <div class="col-md-2">
                <div class="form-group">
                    <label class="form-label"> Texto:</label>
                    <input type="text" class="form-control form-control-sm" id="txtFiltroBuscar" placeholder="Ingrese texto a filtrar" oninput="this.value=this.value.toUpperCase();" />
                    @*<input type="text" class="form-control form-control-sm" id="txtFiltroVariosSolicitudes" placeholder="Buscar..." />*@
                </div>
        </div>
        @*<div class="col-md-2 d-flex align-items-end">
            <div class="form-group">
                <button id="btnBuscarColabExt" class="btn btn-sm btn-primary w-100">
                    <i class="fe fe-search me-1"></i>Buscar
                </button>
            </div>
        </div>*@
        </div>

        <div class="my-3">
            <button id="btnModalColabInt" class="btn btn-sm btn-primary me-2">
                <i class="fe fe-users me-1"></i>Colaborador Interno
            </button>
            <button id="btnModalColabExt" class="btn btn-sm btn-primary me-2">
                <i class="fe fe-users me-1"></i>Colaborador Externo
            </button>
            <button id="btnEliminarSolicitud" class="btn btn-sm btn-primary me-2">
                <i class="fe fe-x-circle me-1"></i>Eliminar Sol.
            </button>
            <button id="btnModalColabInt2" class="btn btn-sm btn-primary me-2">
                <i class="fe feather-search me-1"></i>Buscar
            </button>
            <button id="btnDescargarSolicitudes" class="btn btn-sm btn-primary me-2">
                <i class="fe fe-download me-1"></i>Descargar
            </button>

        </div>

        <table id="tableSolicitudes" class="table table-bordered text-nowrap border-bottom w-100">
            <thead class="thead-light">
                <tr>
                    <th style="font-size:11px;">Nro. Solicitud</th>
                    <th style="font-size:11px;">CodEmpresa</th>
                    <th style="font-size:11px;">CodLocal</th>
                    <th style="font-size:11px;">Código</th>
                    <th style="font-size:11px;">Nombre y Apellido</th>
                    <th style="font-size:11px;">Tipo Usuario</th>
                    <th style="font-size:11px;">Tipo Colaborador</th>
                    <th style="font-size:11px;">Estado</th>
                    <th style="font-size:11px;">Solicitante</th>
                    <th style="font-size:11px;">Acción</th>
                    <th style="font-size:11px;">Fec. Solicitud</th>
                    <th style="font-size:11px;">Aprobador</th>
                    <th style="font-size:11px;">Fec. Aprobación</th>
                    <th style="font-size:11px;">Motivo</th>
                    <th style="font-size:11px;">Eliminador</th>
                    <th style="font-size:11px;">Fec. Eliminación</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>


