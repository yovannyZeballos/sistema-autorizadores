                                <th class="border-bottom-0" style="font-size: 11px;"></th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- MODAL COLABORADOR INTERNO -->
<div class="modal fade" id="modalColabInt" data-bs-backdrop="static">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content modal-content-demo">
            <div class="modal-header">
                <h6 class="modal-title">Colaboradores Internos</h6><button aria-label="Close" class="btn-close" data-bs-dismiss="modal"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body">
                <div class="col-xl-12 d-flex justify-content-between align-items-center mb-4 ">
                    <div class="d-flex align-items-center">
                        <button id="btnSolicitarColabInt" class="btn btn-sm btn-primary ms-1 me-8">
                            <i class="fe fe-plus-circle me-1"></i>Solicitar
                        </button>

                        <div class="form-check form-check-inline d-flex align-items-center">
                            <input class="form-check-input radio-lg" type="radio" name="tipoUsuarioInt" id="radioAutorizadorInt" value="A" checked>
                            <label class="form-check-label radio-label-lg" for="radioAutorizadorInt">Autorizador</label>
                        </div>
                        <div class="form-check form-check-inline d-flex align-items-center">
                            <input class="form-check-input radio-lg" type="radio" name="tipoUsuarioInt" id="radioCajeroInt" value="C">
                            <label class="form-check-label radio-label-lg" for="radioCajeroInt">Cajero</label>
                        </div>
                    </div>
                    <div class="d-flex align-items-center">
                        <input type="text" class="form-control form-control-sm" id="txtFiltroVariosInt" placeholder="Buscar..." />
                    </div>
                </div>
                <div class="col-xl-12">
                    <div class="row">
                        <table id="tableColaboradoresInt" class="table text-nowrap border-bottom">
                            <thead>
                                <tr>
                                    <th class="border-bottom-0" style="font-size: 11px;"></th>
                                    <th class="border-bottom-0" style="font-size: 11px;"></th>
                                    <th class="border-bottom-0" style="font-size: 11px;"></th>
                                    <th class="border-bottom-0" style="font-size: 11px;"></th>
                                    <th class="border-bottom-0" style="font-size: 11px;"></th>
