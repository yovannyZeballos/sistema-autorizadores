                                </div>
                            </div>*@
                    </div>
                </div>



            </div>
        </div>

        @Html.Partial("_CardHeader", "Listado de Solicitudes")
        <div class="card-body">
            <div class="col-xl-12">
                <button id="btnModalColabInt" class="btn btn-sm btn-primary mb-4 ms-1"><i class="fe fe-users me-1"></i>Colaborador Interno</button>
                <button id="btnModalColabExt" class="btn btn-sm btn-primary mb-4 ms-1"><i class="fe fe-users me-1"></i>Colaborador Externo</button>
                <button id="btnEliminarSolicitud" class="btn btn-sm btn-primary mb-4 ms-1"><i class="fe fe-x-circle me-1"></i>Eliminar Sol.</button>
                <button id="btnBuscarColab" class="btn btn-sm btn-primary mb-4 ms-1"><i class="fe feather-search me-1"></i>Buscar</button>
                <button id="btnDescargarSolicitudes" class="btn btn-sm btn-primary mb-4 ms-1"><i class="fe fe-download me-1"></i>Descargar</button>
            </div>
            <div class="col-xl-12">
                <div class="row">
                    <table id="tableSolicitudes" class="table text-nowrap border-bottom">
                        <thead>
                            <tr>
                                <th class="border-bottom-0" style="font-size: 11px;"></th>
                                <th class="border-bottom-0" style="font-size: 11px;"></th>
                                <th class="border-bottom-0" style="font-size: 11px;"></th>
