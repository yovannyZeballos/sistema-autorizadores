@model string
@{
    ViewBag.Title = "Administrar Solicitudes Cod. Comercio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page header -->
<div class="page-header d-lg-flex d-block">
    <div class="page-leftheader">
        <div class="page-title">Administrar Solicitudes Cod. Comercio</div>
    </div>
    <div class="page-rightheader ms-md-auto">
        <ol class="breadcrumb1">
            <li class="breadcrumb-item1">
                <a href="@Url.Action("Index", "Home", new { area = "" })">Inicio</a>
            </li>
            <li class="breadcrumb-item1 active">Solicitudes Cod. Comercio</li>
            <li class="breadcrumb-item1 active">Administrar</li>
        </ol>
    </div>
</div>

<div class="col-xl-12">
    <div class="card overflow-hidden">
        @Html.Partial("_CardHeader", "Listado de solicitudes")
        <div class="card-body">
            <div class="d-flex align-items-center gap-2 mb-2">
                <button id="btnImportarSolicitudCab" class="btn btn-sm btn-primary">
                    <i class="fe fe-upload me-1"></i> Importar Solicitud
                </button>
                <input type="file" id="excelImportar" style="display:none;" accept=".xlsx,.xls" />
            </div>

            <table id="tableSolicitudesCab" class="table table-bordered text-nowrap border-bottom w-100">
                <thead class="table-light">
                    <tr>
                        <th>Nro. Solicitud</th>
                        <th>Razón Social</th>
                        <th>Estado</th>
                        <th>F. Solicitud</th>
                        <th>F. Recepción</th>
                        <th>F. Registro</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modal: Detalle de solicitud / Comercios -->
<div class="modal fade" id="modalDetalleComercio" tabindex="-1" aria-hidden="true" aria-labelledby="lblSolicitudHeader">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">
                    <span id="lblSolicitudHeader">Detalle</span>
                </h5>
                <button aria-label="Close" class="btn-close" data-bs-dismiss="modal"><span aria-hidden="true">&times;</span></button>
            </div>

            <div class="modal-body">
                <!-- Row 1: Detalle de locales -->
                <div class="card mb-3">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <div class="fw-semibold">Locales de la solicitud</div>
                        <div>
                            <button id="btnImportarMaeLocalComercio" class="btn btn-sm btn-primary">
                                <i class="fe fe-upload me-1"></i> Importar Comercios
                            </button>
                            <input type="file" id="excelImportarComercios" style="display:none;" accept=".xlsx,.xls" />
                        </div>
                    </div>
                    <div class="card-body p-2">
                        <table id="tableSolicitudDet" class="table table-bordered text-nowrap border-bottom w-100">
                            <thead class="table-light">
                                <tr>
                                    <th>Local</th>
                                    <th>Estado</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>

                <!-- Row 2: Comercios del local (misma modal body con toolbar dentro) -->
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <div class="fw-semibold">
                            Comercios del local: <span id="lblLocalHeader" class="text-secondary"></span>
                        </div>
                        <div class="btn-group">
                            <button id="btnNuevoComercio" class="btn btn-sm btn-primary">
                                <i class="fe fe-plus"></i> Nuevo
                            </button>
                            <button id="btnEditarComercio" class="btn btn-sm btn-outline-primary">
                                <i class="fe fe-edit"></i> Editar
                            </button>
                        </div>
                    </div>
                    <div class="card-body p-2">
                        <table id="tableLocalComercio" class="table table-bordered text-nowrap border-bottom w-100">
                            <thead class="table-light">
                                <tr>
                                    <th>Cod. Comercio</th>
                                    <th>Canal Venta</th>
                                    <th>Operador</th>
                                    <th>Activo</th>
                                    <th>Acciones</th> <!-- Guardar/Cancelar en fila -->
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                        <div class="small text-muted mt-2">
                            * Para editar, selecciona un registro y pulsa <strong>Editar</strong>.
                            * Para crear, pulsa <strong>Nuevo</strong>. Usa los botones <em>Guardar/Cancelar</em> dentro de la fila.
                        </div>
                    </div>
                </div>
            </div> <!-- /modal-body -->

        </div>
    </div>
</div>

@section scripts{
    <script src="~/Content/plugins/datatable/js/jquery.dataTables.min.js"></script>
    <script src="~/Content/plugins/datatable/js/dataTables.bootstrap5.js"></script>
    <script src="~/Content/plugins/datatable/js/dataTables.buttons.min.js"></script>
    <script src="~/Content/plugins/datatable/js/buttons.bootstrap5.min.js"></script>
    <script src="~/Content/plugins/datatable/js/jszip.min.js"></script>
    <script src="~/Content/plugins/datatable/js/buttons.html5.min.js"></script>
    <script src="~/Content/plugins/datatable/dataTables.responsive.min.js"></script>
    <script src="~/Content/plugins/datatable/responsive.bootstrap5.min.js"></script>
    <script src="~/Content/plugins/sweet-alert/jquery.sweet-modal.min.js"></script>
    <script src="~/Content/plugins/sweet-alert/sweetalert.min.js"></script>
    <script src="~/Content/js/sweet-alert.js"></script>
    <script src="~/Content/plugins/input-mask/jquery.mask.min.js"></script>
    <script src="~/Content/ViewJs/AdministrarSolicitudComercio.js?v=3"></script>
    <script>
        $(function () {
            AdministrarSolicitudComercio.init();
        });
    </script>
}
